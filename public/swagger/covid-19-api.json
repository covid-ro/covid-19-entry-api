{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "COVID-19 Monitor API"
  },
  "basePath": "/",
  "schemes": [
    "http",
    "https"
  ],
  "securityDefinitions": {
    "Authorization": {
      "type": "apiKey",
      "name": "X-API-KEY",
      "in": "header"
    }
  },
  "security": [
    {
      "Authorization": []
    }
  ],
  "paths": {
    "/validate-phone-number": {
      "post": {
        "tags": [
          "Covid-19 Monitor API"
        ],
        "summary": "Validate phone number",
        "operationId": "ValidatePhoneNumber",
        "produces": [
          "application/json"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/ValidatePhoneNumberRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/ValidatePhoneNumberResponse"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "ValidatePhoneNumberRequest": {
      "type": "object",
      "properties": {
        "phone": {
          "type": "string",
          "example": "722334455",
          "required": true
        },
        "phone_country_prefix": {
          "type": "string",
          "example": "40",
          "required": true
        },
        "phone_identifier": {
          "type": "string",
          "example": "ae30c823-a6ef-4606-a60d-bf9513a4305a",
          "required": false
        }
      }
    },
    "ValidatePhoneNumberResponse": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "example": "success"
        },
        "message": {
          "type": "string",
          "example": "SMS sent to phone"
        }
      }
    }
  }
}